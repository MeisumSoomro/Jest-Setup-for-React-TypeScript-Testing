# Authentication (from Clerk Dashboard - https://clerk.dev/)
NEXTAUTH_URL=http://localhost:3000  # Your application URL
NEXTAUTH_SECRET=your-secret-here    # Generate with: openssl rand -base64 32

# Database (from your PostgreSQL provider)
DATABASE_URL="postgresql://user:password@localhost:5432/eduflow"

# Storage (from Uploadthing Dashboard - https://uploadthing.com/)
UPLOADTHING_SECRET=
UPLOADTHING_APP_ID=

# Stripe (from Stripe Dashboard - https://dashboard.stripe.com/)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Integration API Keys (from respective platforms)
INTEGRATION_API_KEY=your-integration-api-key
INTEGRATION_CLIENT_ID=your-client-id
INTEGRATION_CLIENT_SECRET=your-client-secret
INTEGRATION_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Google (from Google Cloud Console - https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# Microsoft Teams (from Azure Portal - https://portal.azure.com/)
MS_TEAMS_CLIENT_ID=your-client-id
MS_TEAMS_CLIENT_SECRET=your-client-secret

# Zoom (from Zoom Marketplace - https://marketplace.zoom.us/)
ZOOM_CLIENT_ID=your-client-id
ZOOM_CLIENT_SECRET=your-client-secret

# Email (from your SMTP provider)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# WebSocket (for real-time features)
NEXT_PUBLIC_SOCKET_URL=ws://localhost:3001

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Public URL
NEXT_PUBLIC_APP_URL=http://localhost:3000